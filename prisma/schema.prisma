generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Product {
    categories  Category[]
    collections Collection[]
    description String
    id          String         @id @default(cuid())
    images      ProductImage[]
    name        String
    price       Int
    rating      Float
    reviews     Review[]
    slug        String
}

model Category {
    description String
    id          String    @id @default(cuid())
    name        String
    products    Product[]
    slug        String
}

model Collection {
    description String
    id          String    @id @default(cuid())
    name        String
    products    Product[]
    slug        String
}

model ProductImage {
    alt     String
    height  Int
    id      String   @id @default(cuid())
    product Product? @relation(fields: [id], references: [id])
    url     String
    width   Int
}

model Review {
    author      String
    createdAt   DateTime
    description String
    email       String
    id          String   @id @default(cuid())
    product     Product? @relation(fields: [id], references: [id])
    rating      Float
    title       String
    updatedAt   DateTime
}
